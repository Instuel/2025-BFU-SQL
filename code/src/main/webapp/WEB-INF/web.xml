<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Energy_System</display-name>

  <!-- 30分钟无操作自动退出（任务书要求） -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <!-- 编码过滤器 -->
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.bjfu.energy.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- 登录鉴权过滤器 -->
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.bjfu.energy.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- 认证 Servlet：登录 / 注册 / 登出 -->
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>com.bjfu.energy.controller.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>

  <!-- 应用路由 Servlet：工作台和各业务线入口 -->
  <servlet>
    <servlet-name>AppRouterServlet</servlet-name>
    <servlet-class>com.bjfu.energy.controller.AppRouterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AppRouterServlet</servlet-name>
    <url-pattern>/app</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AppRouterServlet</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>

  <!-- 系统管理员 Servlet：账号管理 -->
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>com.bjfu.energy.controller.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <!-- 配电网监测 Servlet -->
  <servlet>
    <servlet-name>DistServlet</servlet-name>
    <servlet-class>com.bjfu.energy.controller.DistServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DistServlet</servlet-name>
    <url-pattern>/dist</url-pattern>
  </servlet-mapping>
  <!-- 如果你也需要 /dist/xxx 这样的子路径，就保留下面这个 -->
  <servlet-mapping>
    <servlet-name>DistServlet</servlet-name>
    <url-pattern>/dist/*</url-pattern>
  </servlet-mapping>

  <!-- 告警运维 Servlet -->
  <servlet>
    <servlet-name>AlarmServlet</servlet-name>
    <servlet-class>com.bjfu.energy.controller.AlarmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlarmServlet</servlet-name>
    <url-pattern>/alarm</url-pattern>
  </servlet-mapping>
  <!-- 如果你也需要 /alarm/xxx 这样的子路径，就保留下面这个 -->
  <servlet-mapping>
    <servlet-name>AlarmServlet</servlet-name>
    <url-pattern>/alarm/*</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
